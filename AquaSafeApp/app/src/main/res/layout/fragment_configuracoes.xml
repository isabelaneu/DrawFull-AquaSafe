<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Configuracoes">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/notificacoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="76dp"
            android:background="@null"
            android:src="@drawable/botao_longo_azulclaro"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/poppins"
            android:text="Gerenciar Notificações"
            android:textColor="@color/azul_escuro"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/notificacoes"
            app:layout_constraintEnd_toStartOf="@+id/imageView3"
            app:layout_constraintHorizontal_bias="0.081"
            app:layout_constraintStart_toStartOf="@+id/notificacoes"
            app:layout_constraintTop_toTopOf="@+id/notificacoes"
            app:layout_constraintVertical_bias="0.607" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/svg_seta"
            app:layout_constraintBottom_toBottomOf="@+id/notificacoes"
            app:layout_constraintEnd_toEndOf="@+id/notificacoes"
            app:layout_constraintTop_toTopOf="@+id/notificacoes"
            app:layout_constraintVertical_bias="0.515" />

        <ImageButton
            android:id="@+id/permissoes_botao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@null"
            android:src="@drawable/botao_longo_azulclaro"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/notificacoes" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/poppins"
            android:text="Permissões"
            android:textColor="@color/azul_escuro"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/permissoes_botao"
            app:layout_constraintEnd_toStartOf="@+id/imageView7"
            app:layout_constraintHorizontal_bias="0.005"
            app:layout_constraintStart_toStartOf="@+id/permissoes_botao"
            app:layout_constraintTop_toTopOf="@+id/permissoes_botao" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/svg_seta"
            app:layout_constraintBottom_toBottomOf="@+id/permissoes_botao"
            app:layout_constraintEnd_toEndOf="@+id/permissoes_botao"
            app:layout_constraintTop_toTopOf="@+id/permissoes_botao" />

        <Button
            android:id="@+id/deletar_conta"
            android:layout_width="184dp"
            android:layout_height="60dp"
            android:layout_marginTop="52dp"
            android:backgroundTint="@color/azul_escuro"
            android:fontFamily="@font/poppins_semibold"
            android:text="Deletar Conta"
            android:textSize="16sp"
            app:cornerRadius="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/permissoes_botao"
            app:layout_constraintVertical_bias="0.041" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>